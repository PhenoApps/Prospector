<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <import type="android.view.View"/>

        <variable
            name="onClick"
            type="View.OnClickListener"/>

        <variable
            name="minimizeOnClick"
            type="View.OnClickListener" />

        <variable
            name="scan"
            type="org.phenoapps.prospector.data.models.Scan" />
        
        <variable
            name="deviceType"
            type="String" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/cell">

        <TextView
            android:id="@+id/nameView"
            style="@style/Text.ObservationUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{scan.date}"
            android:onClick="@{minimizeOnClick}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/deviceView"/>

        <TextView
            android:id="@+id/deviceView"
            style="@style/Text.ObservationUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{deviceType}"
            android:onClick="@{minimizeOnClick}"
            app:layout_constraintTop_toBottomOf="@id/nameView"
            app:layout_constraintBottom_toTopOf="@id/lightView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/lightView"
            style="@style/Text.ObservationUnit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@{scan.lightSource == 0 ? @string/led : @string/bulb}"
            android:onClick="@{minimizeOnClick}"
            app:layout_constraintTop_toBottomOf="@id/deviceView"
            app:layout_constraintBottom_toTopOf="@id/graphView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graphView"
            android:layout_width="0dp"
            android:layout_height="128dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            android:onClick="@{onClick}"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/lightView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
