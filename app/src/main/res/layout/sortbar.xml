<?xml version="1.0" encoding="utf-8"?>

<layout>
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageButton
            android:padding="12dp"
            android:id="@+id/sortbar_type"
            android:src="@drawable/sort_alphabetical_variant"
            android:background="@drawable/button_cell"
            android:layout_width="@dimen/sort_icon_size"
            android:layout_height="@dimen/sort_icon_size"
            android:scaleType="matrix"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/sortbar_type_content" />

        <ImageButton
            android:padding="12dp"
            android:id="@+id/sortbar_order"
            android:src="@drawable/ic_sort_black_24dp"
            android:background="@drawable/button_cell"
            android:scaleY="-1"
            android:layout_width="@dimen/sort_icon_size"
            android:layout_height="@dimen/sort_icon_size"
            android:layout_marginStart="8dp"
            android:scaleType="matrix"
            app:layout_constraintStart_toEndOf="@id/sortbar_type"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/sortbar_type_order" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
